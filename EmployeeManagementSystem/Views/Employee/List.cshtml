@model List<EmployeeManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

<p>
    <a asp-action="Create">Create New Employee</a>
</p>


<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Email</td>
                <td>@emp.Department</td>
                <td>@emp.Salary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
